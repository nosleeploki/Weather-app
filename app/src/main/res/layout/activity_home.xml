<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <!-- Nội dung chính của Activity -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar và EditText tìm kiếm -->
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Menu" />

            <EditText
                android:id="@+id/etSearchLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search location"
                android:padding="8dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- CardView hiển thị thông tin thời tiết hiện tại -->
        <androidx.cardview.widget.CardView
            android:id="@+id/currentWeatherCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/weatherIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19°C"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity: 80%"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvWeatherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhiều mây"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dự báo thời tiết từng giờ -->
        <LinearLayout
            android:id="@+id/hourlyForecastLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentWeatherCard"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hourlyTemp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="02:00\n19°C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hourlyTemp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="03:00\n18°C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hourlyTemp3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="04:00\n18°C"
                android:textSize="14sp" />
            <!-- Tiếp tục thêm cho các giờ khác -->
        </LinearLayout>

        <!-- Dự báo thời tiết từng ngày -->
        <LinearLayout
            android:id="@+id/dailyForecastLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hourlyForecastLayout"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dailyTemp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ Hai: 20°C"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/dailyTemp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ Ba: 22°C"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/dailyTemp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ Tư: 21°C"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/dailyTemp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ Năm: 21°C"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/dailyTemp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ Tư: 21°C"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/dailyTemp6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ Tư: 21°C"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/dailyTemp7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ Tư: 21°C"
                android:textSize="16sp"
                android:padding="8dp" />
            <!-- Thêm các TextView khác cho các ngày tiếp theo -->
        </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
